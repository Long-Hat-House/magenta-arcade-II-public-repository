resource_name = "hud_tutorial"
script/source = "class_name HUD_Tutorial extends Control

@onready var main: Label = $VBoxContainer/Label
@onready var instruction: Label = $VBoxContainer/Control/Label2
@onready var anim: AnimationPlayer = $AnimationPlayer

func _is_valid():
	return get_tree() != null;

func appear(label_a:String, label_b:String, wait_for_true:Callable):
	main.text = tr(label_a);
	instruction.text = tr(label_b);

	anim.play(\"oning\");
	await anim.animation_finished;
	if not _is_valid(): return;
	anim.play(\"on\");
	await wait_for_true.call();
	if not _is_valid(): return;
	anim.play(\"offing\");
	await anim.animation_finished;
	if not _is_valid(): return;
	queue_free();
"

