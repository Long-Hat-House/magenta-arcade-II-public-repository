@export var _animation:Switch_Oning_Offing_AnimationPlayer
@export var _cable_mesh:CSGPolygon3D

var _mat:StandardMaterial3D

# Called when the node enters the scene tree for the first time.
func _ready() -> void:
	_mat = _cable_mesh.material_override

	HUBLevel.instance.upgrade_set_selected.connect(_hub_upgrade_set_selected)

	var parent = get_parent()
	if parent is PressableButton:
		parent.graphic_toggled_on.connect(set_on)
		parent.graphic_toggled_off.connect(set_off)

func _hub_upgrade_set_selected(new_set:UpgradeSet):
	if new_set && _mat:
		_mat.emission = new_set.color_highlight

func set_on():
	_animation.set_switch(true)

func set_off():
	_animation.set_switch(false)
"

